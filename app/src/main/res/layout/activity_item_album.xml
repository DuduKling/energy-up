<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/album_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/imageViewAlbumBg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/background_dark"
        android:contentDescription="Fundo da imagem do album"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewLPAlbum"
        app:layout_constraintEnd_toEndOf="@+id/imageViewLPAlbum"
        app:layout_constraintStart_toStartOf="@+id/imageViewLPAlbum"
        app:layout_constraintTop_toTopOf="@+id/imageViewLPAlbum" />

    <ImageView
        android:id="@+id/imageViewLPAlbum"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:contentDescription="Imagem do Album"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/energy_logo" />

</android.support.constraint.ConstraintLayout>